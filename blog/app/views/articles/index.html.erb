<h1>Articles of my blog. This blog made on RubyOnRails</h1>
 
 <div><% if user_signed_in? %>
    <span>Hello, <%= current_user.username %></span>
    <%= link_to 'LogOut', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'LogIn', new_user_session_path %> или <%= link_to 'Registration', new_user_registration_path %>
<% end %></div>

 <%= link_to 'Crete new article', new_article_path %>
<table>
  <tr>
    <th>Title of the article | | |</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      
      <td><%= link_to 'Show', article_path(article) %></td>
      <% if user_signed_in? %>
        

      
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
        
      
    </tr>
  <% end %>
</table>